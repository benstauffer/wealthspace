// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}
datasource db {
    provider = "mysql"
    url = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
  id           Int       @id @default(autoincrement())
  clerkUserId  String    // This will store the Clerk's userId
  accounts     Account[] // Relationship between user and accounts
}

model Account {
  id      Int    @id @default(cuid())
  owner   OwnerType
  type    AccountType
  value   Float
  userId  Int   // Foreign key reference to User
  user    User  @relation(fields: [userId], references: [id])
}

enum AccountType {
  CashAccount
  InvestmentAccount
  PrivateInvestment
  RealEstate
  OtherAssets
  Liability
}

enum OwnerType {
    Personal
    Partner
    OtherOwner
}
